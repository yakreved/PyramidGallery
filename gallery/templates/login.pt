<html>
	<head>
		<title>Login</title>
		<link rel="stylesheet" href="${request.static_url('gallery:static/pylons.css')}" type="text/css" media="screen" charset="utf-8" />
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
		<script>
		function Register()
		{
		     var form = $('#registerForm');
		     form.removeAttr("hidden")
		     var logform = $('#loginForm');
		     logform.attr("hidden","True")
		     var btn = $("#switchBtn")
		     btn.html( 'Log In');
		}

		</script>
	</head>
	<body>
		<!-- start header -->
		<div id="wrapper">
		<div id="header">
			<div id="logo">
				<h1><a href="#" tabindex="-1">${message}</a> </h1>
				<p><a href="http://www.freecsstemplates.org/" tabindex="-1">Please login to continue</a></p>
			</div>
		</div>
		<!-- end header -->
		<div id="loginform" >
		<!-- start content -->
			<form action="\login" method="POST" id="loginForm">
					    	<table>
					    		<tr>
					    			<td>Name:</td>      <td><input tabindex="1" autofocus type="text" name="username" value="user"></td>
								</tr>
					    		<tr>
					    			<td>Password:</td>   <td><input tabindex="2" type="password" name="userpass" value="user"></td>
					    		</tr>
					    	</table>
				<input type="submit" value="Login!" tabindex="3"/>
			</form>
			<form action="\register" method="POST" hidden="true" id="registerForm">
					    	<table>
					    	<th><td>Registration<td></th>
					    		<tr>
					    			<td>Name:</td>      <td><input tabindex="1" autofocus type="text" name="username" value="user"></td>
								</tr>
					    		<tr>
					    			<td>Password:</td>   <td><input tabindex="2" type="password" name="userpass" value="user"></td>
					    		</tr>
					    	</table>
				<input type="submit" value="Register!" tabindex="3"/>
			</form>
			<button OnClick="Register()" id="switchBtn">Sign Up</button>
		</div>
		</div>
	</body>
</html>